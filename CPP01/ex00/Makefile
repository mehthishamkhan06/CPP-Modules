CXX         := c++
CXXFLAGS    := -Wall -Wextra -Werror -std=c++98
NAME        := BraiiiiiiinnnzzzZ
SRCS        := main.cpp newZombie.cpp randomChump.cpp Zombie.cpp
OBJS        := $(SRCS:.cpp=.o)

# Colors
GREEN       := \033[1;32m
BLUE        := \033[1;34m


all: $(NAME)

$(NAME): $(OBJS)
	@echo "$(GREEN)ðŸ”§ Linking object files into executable..."
	@$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

%.o: %.cpp
	@echo "$(GREEN)ðŸ“¦ Compiling $<..."
	@$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@rm -f $(OBJS)
	@echo "$(BLUE)ðŸ§¹ Object files cleaned."

fclean: clean
	@rm -f $(NAME)
	@echo "$(BLUE)ðŸ§¹ Executable cleaned."

re: fclean all
